<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginScreensTitleStyle">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginEnd">230dp</item>
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EmailInputStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/ic_login_screens_box</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:drawableLeft">@drawable/ic_outline_email_24</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="PasswordInputStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/ic_login_screens_box</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:drawableLeft">@drawable/ic_outline_lock</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="ArrowTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:drawableRight">@drawable/ic_baseline_arrow_forward</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_app_button_rectangle</item>
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">#2C2B47</item>
    </style>
    
    
    <!--BOTTOM NAV TEXT STYLE -->
    <style name="BottomNavigationViewActiveTextStyle"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/my_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationViewInActiveTextStyle"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/my_font</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HomeandBagTitleStyle">
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:progressTint">#7940AF</item>
        <item name="android:stepSize">2</item>
    </style>

    <style name="ProductCountStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="BackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">9dp</item>
        <item name="android:backgroundTint">#FFE8E5CC</item>
    </style>

    <style name="FacebookAndGoogleButtonStyle">
        <item name="android:layout_width">77dp</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:backgroundTint">#FFE8E5CC</item>
        <item name="android:clickable">true</item>
    </style>
</resources>